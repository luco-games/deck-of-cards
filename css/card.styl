.card
  position: absolute
  display: inline-block
  left: unit(-31 / 16, 'rem')
  top: unit(-44 / 16, 'rem')
  width: unit(62 / 16, 'rem')
  height: unit(88 / 16, 'rem')
  background-color: #fff
  border-radius: 4px
  box-shadow: 0 1px 1px rgba(#000, .15)
  cursor: default
  will-change: transform

  .face
    height: 100%
    background-position: 50% 50%
    background-size: 100% 100%
    background-repeat: no-repeat

  .back
    position: absolute
    background-position: 50% 50%
    background-size: 100% 100%
    background-repeat: no-repeat
    width: 100%
    height: 100%
    top: 0
    left: 0

  &.rank0
    .face
      background-image: url(faces/0_front.svg)
  &.rank1
    .face
      background-image: url(faces/1_front.svg)

  &.rank0
    .back
      background-image: url(faces/0_back.svg)
  &.rank1
    .back
      background-image: url(faces/1_back.svg)
